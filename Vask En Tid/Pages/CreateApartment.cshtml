@page
@model Vask_En_Tid.Pages.CreateApartmentModel

@if (TempData["Msg"] is string m)
{
    <div class="alert alert-info">@m</div>
}

<h2>Opret lejlighed</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="NewApartment.Number" class="form-label"></label>
        <input asp-for="NewApartment.Number" class="form-control" />
        <span asp-validation-for="NewApartment.Number" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewApartment.ApartmentCode" class="form-label"></label>
        <input asp-for="NewApartment.ApartmentCode" class="form-control" />
        <span asp-validation-for="NewApartment.ApartmentCode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opret</button>
</form>

<hr />

<h3>Eksisterende lejligheder</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nummer</th>
            <th>Lejligheds nr.</th>
            <th>Handling</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Apartments)
        {
            <tr>
                <td>@a.ApartmentId</td>
                <td>@a.Number</td>
                <td>@a.ApartmentCode</td>
                <td>
                    <form method="post" asp-page-handler="Delete" class="d-inline">
                        <input type="hidden" name="apartmentId" value="@a.ApartmentId" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Slet lejlighed @a.Number (@a.ApartmentCode)?');">
                            Slet
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}