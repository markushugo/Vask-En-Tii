@* Pages/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] · Vask En Tid</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="topbar">
        <div class="topbar__inner container">
            <a class="brand" asp-page="/Index">
                <span class="brand__logo">🧼</span>
                <span class="brand__text">Vask En Tid</span>
            </a>

            <nav class="nav" aria-label="Primær navigation">
                <a asp-page="/Bookings" class="nav__link">Booking</a>
                <a asp-page="/BookingOverview" class="nav__link">Bookinger</a>
                <a asp-page="/Tenants" class="nav__link">Beboere</a>
            </nav>

            <div class="topbar__right">
                <button class="avatar" type="button">TF</button>
            </div>
        </div>
    </header>

    <main class="page container">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container footer__inner">
            <div>© @DateTime.UtcNow.Year Ejendomsforeningen Tusindfryd</div>
            <div class="muted">Vaskekælder · interne brugere</div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>