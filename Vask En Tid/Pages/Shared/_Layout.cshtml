<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] · Vask En Tid</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header class="nav">
        <div class="container nav__inner">
            <a class="brand" href="/">
                <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                    <rect x="3" y="2" width="18" height="20" rx="3" />
                    <circle cx="12" cy="12" r="5.5" />
                    <circle cx="8" cy="6" r="1" />
                    <circle cx="12" cy="6" r="1" />
                </svg>
                <span>Vask En Tid</span>
            </a>

       
            <input id="nav-toggle" type="checkbox" class="nav__toggle" aria-label="Åbn menu" />
            <label for="nav-toggle" class="nav__burger" aria-hidden="true"><span></span><span></span><span></span></label>

            <nav class="nav__links" aria-label="Primær navigation">
                <a href="/#booking">Booking</a>
                <a asp-page="/CreateApartment">Lejlighed</a>
                <a href="/#mine">Mine tider</a>
                <a href="/#regler">Regler</a>
                <a href="/#kontakt">Kontakt</a>
            </nav>

            <a class="btn btn--primary nav__cta" href="#">Log ind</a>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container footer__inner">
            <div>© @DateTime.UtcNow.Year Vask En Tid</div>
            <div class="muted">Privatliv · Vilkår · Support</div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>