@page
@model Vask_En_Tid.Pages.BookingModel.CreateBooking
@if (TempData["Msg"] is string m)
{
    <div class="alert alert-info">@m</div>
}

<h2>Opret Booking</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="NewBooking.BookingTime" class="form-label"></label>
        <input asp-for="NewBooking.BookingTime" class="form-control" />
        <span asp-validation-for="NewBooking.BookingTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewBooking.BookingDate" class="form-label"></label>
        <input asp-for="NewBooking.BookingDate" class="form-control" />
        <span asp-validation-for="NewBooking.BookingDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewBooking.IsBooked" class="form-label"></label>
        <input asp-for="NewBooking.IsBooked" class="form-control" />
        <span asp-validation-for="NewBooking.IsBooked" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opret</button>
</form>

<hr />

<h3>Eksisterende bookinger</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Booking tid</th>
            <th>Booking dato</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Bookings)
        {
            <tr>
                <td>@a.BookingId</td>
                <td>@a.BookingTime</td>
                <td>@a.BookingDate</td>
                <td>@a.IsBooked</td>
                <td>
                    <form method="post" asp-page-handler="Delete" class="d-inline">
                        <input type="hidden" name="bookingId" value="@a.BookingId" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Slet booking @a.BookingTime (@a.BookingDate, @a.IsBooked)?');">
                            Slet
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
