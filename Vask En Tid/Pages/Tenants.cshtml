@page
@model Vask_En_Tid.Pages.TenantsModel
@{
    ViewData["Title"] = "Opret beboer";
}

<div class="form-card">
    <div>
        <h2 class="form-title">Opret beboer</h2>
        <p class="muted" style="margin:0;">Registrér navn og lejlighed.</p>
    </div>

    <form method="post">
        <div class="form-row">
            <label asp-for="Tenant.FirstName">Fornavn</label>
            <input asp-for="Tenant.FirstName" class="input-text" />
            <span asp-validation-for="Tenant.FirstName" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Tenant.LastName">Efternavn</label>
            <input asp-for="Tenant.LastName" class="input-text" />
            <span asp-validation-for="Tenant.LastName" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Lejlighed</label>
            <select asp-for="Tenant.ApartmentId"
                    asp-items="@(new SelectList(Model.Apartments, "ApartmentId", "ApartmentCode"))">
                <option value="">-- vælg --</option>
            </select>
        </div>

        <button type="submit" class="btn btn--primary btn-inline">Gem</button>
    </form>
</div>
